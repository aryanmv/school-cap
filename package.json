{
  "name": "school",
  "version": "1.0.0",
  "description": "A project to pratice and study more about SAP Cloud Application Programming Model. ",
  "repository": "https://github.com/balbinosoares/school-cap.git",
  "license": "Apache-2.0",
  "dependencies": {
    "@sap/cds": "^3.21.2",
    "@sap/hana-client": "^2.4.182",
    "express": "^4.17.1",
    "hdb": "^0.17.1"
  },
  "engines": {
    "node": "^8.9"
  },
  "scripts": {
    "start": "npx cds run",
    "start-local": "cds watch",
    "format": "prettier-standard '**/*.js'",
    "build": "cds build/all --clean",
    "test": "standard && jest",
    "jest": "jest",
    "debug": "node --nolazy --inspect-brk=9229 ./node_modules/gulp/bin/gulp test",
    "deploy": "cds deploy",
    "build:cf": "mbt build -p=cf",
    "deploy:cf": "cf deploy mta_archives/school_0.0.1.mtar"
  },
  "devDependencies": {
    "@sap/cds-dk": "^1.4.4",
    "jest": "^25.1.0",
    "prettier-standard": "^16.1.0",
    "sqlite3": "^4.1.1",
    "standard": "^14.3.1",
    "supertest": "latest"
  },
  "cds": {
    "requires": {
      "dbprd": {
        "kind": "hana",
        "model": [
          "db",
          "srv"
        ]
      },
      "db": {
        "kind": "sqlite",
        "model": [
          "db",
          "srv"
        ],
        "credentials": {
          "database": "db/schoolcap.db"
        }
      },
      "odata": {
        "version": "v4"
      }
    }
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "files": [
    "db",
    "srv"
  ]
}
